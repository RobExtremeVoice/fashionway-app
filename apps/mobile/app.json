{
  "expo": {
    "name": "FashionWay",
    "slug": "fashionway",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1D4ED8"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.fashionway.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "FashionWay usa sua localização para encontrar motoboys próximos.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "FashionWay usa sua localização em segundo plano para rastrear entregas.",
        "NSCameraUsageDescription": "FashionWay usa a câmera para foto de comprovante de coleta/entrega."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1D4ED8"
      },
      "package": "com.fashionway.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "FashionWay usa sua localização para rastrear entregas."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "FashionWay usa a câmera para foto de comprovante."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#1D4ED8"
        }
      ]
    ],
    "scheme": "fashionway",
    "experiments": {
      "typedRoutes": true
    }
  }
}
